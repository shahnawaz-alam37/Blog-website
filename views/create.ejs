<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Blog website</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="styles/style.css">
    </head>
    <body>
        <%- include("header.ejs")%>
        <div class="container mt-5">
            <h1>Create a New Blog</h1>
          
            <!-- Blog Form -->
            <form action="/submit" method="post">
              <!-- Title -->
              <div class="form-group">
                <label for="blogTitle">Title</label>
                <input type="text" class="form-control" id="blogTitle" name="blogTitle" placeholder="Enter the blog title" required>
              </div>
          
              <!-- Topics (as a dropdown list) -->
              <div class="form-group">
                <label for="blogTopics">Topics</label>
                <select class="form-control" id="blogTopics" name="blogTopics" required>
                  <option>Technology</option>
                  <option>Science</option>
                  <option>Travel</option>
                  <option>Food</option>
                  <!-- Add more topics as needed -->
                </select>
              </div>
          
              <!-- Headline -->
              <div class="form-group">
                <label for="blogHeadline">Headline</label>
                <input type="text" class="form-control" id="blogHeadline" name="blogHeadline" placeholder="Enter the blog headline" required>
              </div>
          
              <!-- Thumbnail Option -->
              <div class="form-group">
                <label for="blogThumbnail">Thumbnail (optional)</label>
                <input type="file" class="form-control-file" id="blogThumbnail" name="blogThumbnail">
              </div>
          
              <!-- Blog Text Area -->
              <div class="form-group">
                <label for="blogText">Blog Text</label>
                <textarea class="form-control" id="blogText" name="blogText" rows="6" placeholder="Enter your blog text" required></textarea>
              </div>
          
              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          
        <%- include("footer.ejs")%>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>
